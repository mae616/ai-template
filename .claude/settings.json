{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/warn-destructive-bash.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-edit-notify.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/validate-mermaid.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
