{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Task",
      "TaskList",
      "TaskGet",
      "TaskUpdate",
      "WebSearch",
      "WebFetch",
      "Bash(npm run lint*)",
      "Bash(npm run build*)",
      "Bash(npm run test*)",
      "Bash(npm run type*)",
      "Bash(npm run format*)",
      "Bash(pnpm lint*)",
      "Bash(pnpm build*)",
      "Bash(pnpm test*)",
      "Bash(pnpm type*)",
      "Bash(pnpm format*)",
      "Bash(npx tsc*)",
      "Bash(npx eslint*)",
      "Bash(npx prettier*)",
      "Bash(npx vitest*)",
      "Bash(npx jest*)",
      "Bash(npx biome*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git ls-files*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh pr diff*)",
      "Bash(gh issue view*)",
      "Bash(gh issue list*)",
      "Bash(ls*)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(pnpm --version)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/warn-destructive-bash.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/post-edit-notify.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/validate-mermaid.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
